    "build:action": "npx tsx action/scripts/build.ts"
  },
  "prettier": "@jill64/prettier-config",
  "devDependencies": {
    "octoflare": "1.3.0",
    "esbuild": "0.24.2",
    "@jill64/prettier-config": "1.0.0",
    "@jill64/eslint-config-ts": "2.0.5",
    "typescript": "5.7.3"
  }
}
